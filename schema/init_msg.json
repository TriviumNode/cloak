{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InitMsg",
  "type": "object",
  "required": [
    "admin",
    "entropy",
    "fee",
    "max_stack",
    "min_stack",
    "operator",
    "sscrt_addr",
    "sscrt_hash"
  ],
  "properties": {
    "admin": {
      "description": "Recipient of fees and able to make adjustments",
      "allOf": [
        {
          "$ref": "#/definitions/HumanAddr"
        }
      ]
    },
    "entropy": {
      "type": "string"
    },
    "fee": {
      "description": "Cost of every use",
      "allOf": [
        {
          "$ref": "#/definitions/Uint128"
        }
      ]
    },
    "max_stack": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "min_stack": {
      "description": "Number of deposits before all transactions go through",
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "operator": {
      "$ref": "#/definitions/HumanAddr"
    },
    "sscrt_addr": {
      "$ref": "#/definitions/HumanAddr"
    },
    "sscrt_hash": {
      "type": "string"
    }
  },
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "Uint128": {
      "type": "string"
    }
  }
}
